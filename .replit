entrypoint = "gateway-server.js"
modules = ["nodejs-22", "nodejs-20", "nodejs-18", "postgresql-16", "python-3.11"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Eidolon SDK"

[[workflows.workflow]]
name = "Eidolon SDK"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 AGENT_PORT=3102 node index.js"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[nix]
packages = ["fontconfig", "ghostscript", "glib", "harfbuzz", "jiq", "jq", "jq-lsp", "jql", "lsof", "nodejs-18", "nodejs-20", "nodejs-22", "openssl", "pandoc", "pango", "python312Packages.jq", "python312Packages.xstatic-jquery-ui", "python313Packages.django-jquery-js", "python313Packages.jq", "python313Packages.xstatic-jquery", "tree", "undollar", "wkhtmltopdf"]
channel = "stable-25_05"

[agent]
expertMode = true

[[ports]]
localPort = 3101
externalPort = 3003
exposeLocalhost = true

[[ports]]
localPort = 3102
externalPort = 3001
exposeLocalhost = true

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
run = ["node", "gateway-server.js"]

onBoot = "bash server/scripts/workspace-startup.sh"
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
