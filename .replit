modules = ["nodejs-20", "python-3.11"]
[extension]
isExtension = true
extensionID = "gpt-repo-access"
buildCommand = "npm run build"
outputDirectory = "public"

[nix]
packages = ["cargo", "libiconv", "libxcrypt", "lsof", "postgresql", "rustc", "tree"]
channel = "stable-25_05"

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "RepEditor"

[[workflows.workflow]]
name = "RepEditor"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python -m uvicorn app.main:app --host 0.0.0.0 --port 5000 --reload"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46579
externalPort = 3000
