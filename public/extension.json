{
  "name": "GPT Repository Access",
  "description": "Vecto Pilot AI (GPT-5) plans, diffs, commits, and PRs. Tokens stay in the browser.",
  "icon": "icon.svg",
  "longDescription": "Public extension providing GPT-5 assisted repo editing, diagnostics, and PR automation. All OAuth/PAT tokens remain in the browser.",
  "scopes": [
    { "$case": "workspace" },
    { "$case": "repl" }
  ],
  "tools": [
    { "$case": "panel", "name": "AI Assistant", "htmlPath": "gpt-frame.html" },
    { "$case": "panel", "name": "Repo Fixer", "htmlPath": "panel.html" },
    { "$case": "panel", "name": "SQL Viewer", "htmlPath": "sql.html" },
    { "$case": "panel", "name": "Logs & Diagnostics", "htmlPath": "logs.html" },
    { "$case": "panel", "name": "Settings", "htmlPath": "config.html" }
  ],
  "fileHandlers": [
    { "$case": "file", "name": "SVG Editor", "htmlPath": "svg-editor.html", "pattern": "*.svg" },
    { "$case": "file", "name": "Diff Viewer", "htmlPath": "diff.html", "pattern": "*.diff" },
    { "$case": "file", "name": "Patch Viewer", "htmlPath": "diff.html", "pattern": "*.patch" }
  ],
  "background": { "page": "background.html" }
}