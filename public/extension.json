{
  "name": "GPT Repository Access",
  "description": "Vecto Pilot AI (GPT-5) plans, diffs, commits and PRs. Tokens stay in the browser.",
  "longDescription": "AI-powered repo editor for Replit: plan with GPT-5, generate diffs, stage/commit, open PRs, inspect logs, and tweak settings. Ships file handlers for .svg and .diff/.patch. Nothing leaves your browser unless you push.",
  "icon": "/icon.svg",
  "tags": ["AI", "Git", "Repository", "Assistant"],
  "website": "https://dev.melodydashora.dev",
  "authorEmail": "bot@melodydashora.dev",

  "fileHandlers": [
    {
      "glob": "*.svg",
      "handler": "/svg-editor.html",
      "name": "SVG Editor",
      "icon": "/icon.svg"
    },
    {
      "glob": "*.diff",
      "handler": "/diff.html",
      "name": "Diff Viewer",
      "icon": "/icon.svg"
    },
    {
      "glob": "*.patch",
      "handler": "/diff.html",
      "name": "Patch Viewer",
      "icon": "/icon.svg"
    }
  ],

  "tools": [
    {
      "handler": "/gpt-frame.html",
      "name": "AI Assistant",
      "icon": "/icon.svg"
    },
    {
      "handler": "/panel.html",
      "name": "Repo Fixer",
      "icon": "/icon.svg"
    },
    {
      "handler": "/sql.html",
      "name": "SQL Viewer",
      "icon": "/icon.svg"
    },
    {
      "handler": "/logs.html",
      "name": "Logs & Diagnostics",
      "icon": "/icon.svg"
    },
    {
      "handler": "/config.html",
      "name": "Settings",
      "icon": "/icon.svg"
    }
  ],

  "scopes": [
    {
      "name": "read",
      "reason": "Read any file in your Replit App"
    },
    {
      "name": "write-exec",
      "reason": "Write to any file and execute code/commands"
    },
    {
      "name": "repldb:read",
      "reason": "Read keys from ReplDB"
    },
    {
      "name": "repldb:write",
      "reason": "Write/Delete keys in ReplDB"
    },
    {
      "name": "experimental-api",
      "reason": "Use experimental APIs for advanced features"
    }
  ],

  "background": {
    "page": "/background.html"
  }
}
