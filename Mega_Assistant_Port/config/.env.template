# ============================================================
# MEGA ASSISTANT PORT - Environment Configuration Template
# ============================================================
# Copy this file to .env and fill in your actual values

# ============================================================
# SECURITY TOKENS (REQUIRED)
# ============================================================
# Generate tokens with: openssl rand -hex 32

AGENT_TOKEN=your_64_char_hex_token_here_generate_with_openssl_rand_hex_32
EIDOLON_TOKEN=your_64_char_hex_token_here_generate_with_openssl_rand_hex_32
GW_KEY=your_gateway_key_here_generate_with_openssl_rand_hex_32

# ============================================================
# AI PROVIDER API KEYS (REQUIRED)
# ============================================================

ANTHROPIC_API_KEY=your_anthropic_key_here
OPENAI_API_KEY=your_openai_key_here
GOOGLE_API_KEY=your_google_gemini_key_here

# ============================================================
# DATABASE CONNECTION (REQUIRED)
# ============================================================

DATABASE_URL=postgresql://user:password@host:port/database

# ============================================================
# SERVER CONFIGURATION
# ============================================================

# Port configuration
EIDOLON_SDK_PORT=3101
AGENT_SERVER_PORT=43717
GATEWAY_PORT=5000

# Node environment
NODE_ENV=development

# ============================================================
# AI MODEL CONFIGURATION
# ============================================================

# Claude Sonnet 4.5 (Primary Assistant)
CLAUDE_MODEL=claude-sonnet-4.5-20250929
CLAUDE_MAX_TOKENS=8192

# Claude Opus 4.1 (Task Handoff Assistant)
CLAUDE_OPUS_MODEL=claude-opus-4-1-20250805
CLAUDE_OPUS_MAX_TOKENS=16384

# GPT-5 Pro (Tactical Planner)
OPENAI_MODEL=gpt-5
GPT5_REASONING_EFFORT=high
GPT5_MAX_COMPLETION_TOKENS=16384

# Gemini 2.5 Pro (Validator)
GEMINI_MODEL=gemini-2.5-pro-latest
GEMINI_MAX_TOKENS=8192

# ============================================================
# AGENT OVERRIDE (ATLAS) CONFIGURATION
# ============================================================

# Fallback chain: Claude → GPT-5 → Gemini
ATLAS_PRIMARY_PROVIDER=claude
ATLAS_FALLBACK_1=gpt5
ATLAS_FALLBACK_2=gemini

# ============================================================
# ASSISTANT POLICY
# ============================================================

POLICY_PATH=./config/assistant-policy.json

# ============================================================
# LOGGING & DIAGNOSTICS
# ============================================================

LOG_LEVEL=info
ENABLE_DIAGNOSTICS=true

# ============================================================
# MEMORY SYSTEM
# ============================================================

MEMORY_RETENTION_DAYS=730
ENABLE_ENHANCED_MEMORY=true

# ============================================================
# RATE LIMITING
# ============================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
