{
  "name": "mega-assistant-port",
  "version": "1.0.0",
  "description": "Portable AI Assistant System with Eidolon SDK, Agent Override, and Enhanced Memory",
  "main": "servers/gateway-server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node servers/gateway-server.js",
    "dev": "npm-run-all --parallel dev:*",
    "dev:eidolon": "node servers/eidolon-sdk-server.js",
    "dev:agent": "node servers/agent-server.js",
    "dev:gateway": "node servers/gateway-server.js",
    "eidolon": "node servers/eidolon-sdk-server.js",
    "agent": "node servers/agent-server.js",
    "gateway": "node servers/gateway-server.js",
    "setup": "bash scripts/setup.sh",
    "which-assistant": "node scripts/which-assistant.mjs",
    "validate-json": "node scripts/find-json-errors.mjs",
    "db:push": "drizzle-kit push",
    "db:push:force": "drizzle-kit push --force",
    "db:studio": "drizzle-kit studio",
    "compact-memory": "node lib/eidolon/memory/compactor.js",
    "test": "echo 'No tests configured yet' && exit 0",
    "doctor": "echo '== Dependencies ==' && npm ls || true && echo '== Audit ==' && npm audit || true"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/generative-ai": "^0.24.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "node-fetch": "^3.3.2",
    "openai": "^5.23.2",
    "pg": "^8.16.3",
    "zod": "^3.25.76",
    "ajv": "^8.17.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.5",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "ai",
    "assistant",
    "eidolon",
    "claude",
    "gpt-5",
    "gemini",
    "agent-override",
    "memory",
    "postgres",
    "fallback",
    "portable"
  ],
  "author": "Mega Assistant Port",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/mega-assistant-port"
  }
}
