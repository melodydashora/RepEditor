{
  "name": "gateway-core",
  "version": "4.1.0",
  "description": "Vecto Pilot Gateway - Node.js API Gateway (SDK + Agent)",
  "main": "gateway-server.js",
  "type": "module",
  "scripts": {
    "start": "NODE_ENV=production node gateway-server.js",
    "dev": "NODE_ENV=development node gateway-server.js",
    "eidolon-direct": "node index.js",
    "agent": "node agent-server.js",
    "emergency": "node emergency-eidolon.js",
    "recover": "bash eidolon-recovery.sh",
    "test:anthropic": "node tests/eidolon/test-anthropic-model.js",
    "test:sdk": "node tests/eidolon/test-sdk-minimal.js",
    "test:protocol": "node tests/eidolon/test-exact-protocol.js",
    "test:override": "node tests/eidolon/test-override-confirmation.js",
    "test:phases": "node ./tests/run-all-phases.js",
    "debug:emergency": "node ./tools/debug/emergency-eidolon.js",
    "guard": "npm-run-all -s guard:json guard:deps guard:js",
    "guard:json": "jsonlint -q \"**/*.json\"",
    "guard:deps": "npm ls --all --omit=dev > /dev/null",
    "guard:js": "echo 'No frontend linting needed'",
    "doctor": "echo '== Deps ==' && npm ls --omit=dev || true && echo '== Audit ==' && npm audit --omit=dev || true && echo '== Orphans ==' && depcheck || true",
    "model:research": "node tools/research/model-discovery.mjs",
    "model:verify": "node tools/research/model-discovery.mjs >/dev/null && echo 'âœ… Model verification passed'",
    "db:push": "drizzle-kit push",
    "build": "echo 'No build step needed' && exit 0"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.32.1",
    "@google/generative-ai": "^0.24.1",
    "ajv": "^8.17.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.44.5",
    "drizzle-zod": "^0.8.3",
    "express": "^4.21.1",
    "express-rate-limit": "^7.5.1",
    "h3-js": "^4.3.0",
    "helmet": "^8.1.0",
    "http-proxy-middleware": "^3.0.5",
    "node-fetch": "^3.3.2",
    "openai": "^5.23.2",
    "pg": "^8.16.3",
    "xml2js": "^0.6.2",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "gateway",
    "api",
    "vecto",
    "rideshare",
    "node"
  ],
  "author": "Vecto Pilot Gateway",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.6.0",
    "@types/pg": "^8.15.5",
    "depcheck": "^1.4.7",
    "drizzle-kit": "^0.31.5",
    "jsonlint": "^1.6.3",
    "npm-run-all": "^4.1.5"
  }
}
